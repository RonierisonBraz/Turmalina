<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>

    <input id="teste">
    <button id="btn-show">Click Me</button>

    <div id="mostrarStatus">
        <p>AQUI TEMOS A DIV DE STATUS</p>
    </div>

    <script>
        let elemento = document.getElementById("mostrarStatus");
        elemento.style.display = "none";

      
        document.getElementById("btn-show").onclick = function () {
            myFunction()
        };

        function myFunction(idPedido) {

            let id_pedido = document.getElementById("teste").innerText;
            
            fetch(`http://localhost:3000/pedidos/cancelar/${id_pedido}`, {
                    "method": "PUT",
                    "headers": {
                        "Content-Type": "application/json"
                    },
                    "body": "{\"status_pedido_id\":3}"
                })
                .then(response => {
                    console.log(response);
                })
                .catch(err => {
                    console.error(err);
                });
        }
    </script>

</body>

</html>